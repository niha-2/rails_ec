<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <%= link_to product do %>
      <%= image_tag product.image, class: "card-img-top" %>
    <% end %>
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder"><%= product.name %></h5>
        <!-- Product price-->
        <%= product.price %>å††
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <%= link_to 'Add to cart',add_cart_product_path(id: product.id), class: "btn btn-outline-dark mt-auto", data: { "turbo-method": :post } %>
      </div>
    </div>
  </div>
</div>
