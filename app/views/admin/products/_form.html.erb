  <% if @product.errors.present? %>
  <% @product.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>
<%= form_with model: [:admin, @product] do |p| %>
  <div class="form-group mb-2 fs-5 fw-bolder">
    <%= p.label :name, '商品名：' %>
    <%= p.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group mb-2 fs-5 fw-bolder">
    <%= p.label :price, '価格：' %>
    <%= p.number_field :price, class: 'form-control' %>
  </div>
  <div class="form-group mb-2 fs-5 fw-bolder">
    <%= p.label :description, '商品説明：' %>
    <%= p.text_area :description, class: 'form-control', rows: 3 %>
  </div>
  <div class="form-group mb-2 fs-5 fw-bolder">
    <%= p.label :image, '商品画像：' %>
    <%= p.file_field :image, direct_upload: true, class: 'form-control' %>
  </div>
  <%= p.submit nil, class: 'btn btn-primary' %>
<% end %>
