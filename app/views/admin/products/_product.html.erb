<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <%= image_tag product.image, class: "card-img-top" %>
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder"><%= product.name %></h5>
        <!-- Product price-->
        <%= product.price %>円
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center"><%= link_to '削除', product, class: "btn btn-outline-dark mt-auto", method: :delete %></div>
    </div>
  </div>
</div>
