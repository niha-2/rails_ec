<h2>ご購入明細 #<%= billing_info.id %></h2>
<div class="col mb-5">
  <div class="card h-100">
    <table class="table">
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">価格</th>
        <th scope="col">個数</th>
      </tr>
      <% purchase_details.each do |purchase_detail| %>
        <tr>
          <td><%= purchase_detail.product.name %></td>
          <td><%= purchase_detail.product.price %></td>
          <td><%= purchase_detail.quantity %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="2">Discount:</td>
        <td><%= billing_info.discount_amount %></td>
      </tr>
      <tr>
        <td colspan="2"><strong>Total:</strong></td>
        <td><%= [purchase_details.sum { |purchase_detail| purchase_detail.product.price * purchase_detail.quantity } - billing_info.discount_amount, 0].max %></td>
      </tr>
    </table>
  </div>
</div>
